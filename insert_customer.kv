<InsertCustomerPopUp>:
    orientation: 'vertical'
    BoxLayout:
        id: nationalCode
        Label:
            text: 'National Code'
        TextInput:
            id: customerNationalCodeInput
            multiline: False
            text: 'default'

    BoxLayout:
        Label:
            text: 'First Name'
        TextInput:
            id: customerFirstName
            multiline: False

    BoxLayout:
        Label:
            text: 'Last Name'
        TextInput:
            id: customerLastName
            multiline: False

    BoxLayout:
        Label:
            text: 'Mobile Number'
        TextInput:
            id: customerMobileNumber
            multiline: False

    BoxLayout:
        Label:
            text: 'Age'
        TextInput:
            id: customerAge
            multiline: False

    BoxLayout:
        Button:
            id: insert_customer_submit
            text: "Submit"
            on_release: root.submit()

        Button:
            id: insert_customer_cancel
            text: "Cancel"