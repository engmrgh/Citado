<FoodOrderPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'Factor id'
        Spinner:
            id: factor_id_selector
            text: 'Choose a factor'
            values: root.pick_factor()
            on_text: root.update_form()
        Button:
            id: new_factor
            text: 'new'
            on_release: root.new()

    BoxLayout:
        Label:
            text: 'Customer'
        Spinner:
            id: customer_selector
            text: 'Choose a factor'
            on_text: root.set_factor_customer()
            disabled: True
        Button:
            id: set_customer
            text: 'set customer'
            on_release: root.enable_customer_selector()

    BoxLayout:
        Label:
            text: 'Food'
        Spinner:
            id: food_selector
            text: 'Choose Food'
            values: root.pick_food()
        Button:
            id: add_food
            text: 'add'
            on_release: root.add()
        Button:
            id: delete_food
            text: 'delete'
            disabled: True

    BoxLayout:
        Label:
            text: 'Address'
        Spinner:
            id: address_selector
            text: 'Restaurant'
            on_text: root.enable_proper()
            disabled: True
        Button:
            id: set_address
            text: "set"
            on_release: root.set_factor_address()
            disabled: True


    BoxLayout:
        Label:
            text: 'Biker'
        Spinner:
            id: biker_selector
            text: 'Choose Someone'
            disabled: True
        Button:
            id: set_biker
            text: "set"
            on_release: root.set_factor_biker()
            disabled: True


    BoxLayout:
        Button:
            id: exit
            text: 'Exit'