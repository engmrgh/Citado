<RawMaterialOrderPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            id: store
            text: 'Store'
        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
        Label:
            id: material
            text: 'Material'

        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
