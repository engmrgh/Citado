<InsertAddressPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'Phone number'
        TextInput:
            id: phone_number
            multiline: False

    BoxLayout:
        Label:
            text: 'Name'
        TextInput:
            id: name
            multiline: False

    BoxLayout:
        Label:
            text: 'Address'
        TextInput:
            id: address
            multiline: False

    BoxLayout:
        Label:
            text: 'Customer'
        Spinner:
            id: customer
            text: 'Customer'
            values: root.get_customer_list()

    BoxLayout:
        Button:
            id: submit
            text: "Submit"
            on_release: root.submit()

        Button:
            id: cancel
            text: "Cancel"