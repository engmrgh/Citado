<DeleteStorePopup>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'store'
        Spinner:
            id: store_selector
            text: 'Choose An Store'
            values: root.pick_values()
            on_text: root.update_form()

    BoxLayout:
        Label:
            text: 'start_time'
        Label:
            id: start_time
            text: ''

    BoxLayout:
        Label:
            text: 'end_time'
        Label:
            id: end_time
            text: ''

    BoxLayout:
        Button:
            id: delete
            text: "delete"
            on_release: root.delete()
            disabled: True

        Button:
            id: cancel
            text: "Cancel"