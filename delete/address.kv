<DeleteAddressPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'Phone number'
        Spinner:
            id: address_selector
            text: 'Choose An Address'
            values: root.pick_values()
            on_text: root.update_form()

    BoxLayout:
        Label:
            text: 'Name'
        Label:
            id: addressName
            multiline: False

    BoxLayout:
        Label:
            text: 'Address'
        Label:
            id: addressAddress
            multiline: False

    BoxLayout:
        Button:
            text: "Delete"
            on_release: root.delete()

        Button:
            id: delete_address_cancel
            text: "Cancel"