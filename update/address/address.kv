<UpdateAddressPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'Phone number'
        Spinner:
            id: address_selector
            text: 'Choose An Address'
            values: root.pick_values()
            on_text: root.update_form()

    BoxLayout:
        Label:
            text: 'Name'
        TextInput:
            id: addressName
            multiline: False

    BoxLayout:
        Label:
            text: 'Address'
        TextInput:
            id: addressAddress
            multiline: False

    BoxLayout:
        Button:
            text: "Submit"
            on_release: root.submit()

        Button:
            id: cancel
            text: "Cancel"