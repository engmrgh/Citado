<UpdateBikerPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            text: 'National Code'
        Spinner:
            id: biker_selector
            text: 'Choose A Biker'
            values: root.pick_values()
            on_text: root.update_form()

    BoxLayout:
        Label:
            text: 'First Name'
        TextInput:
            id: first_name
            multiline: False

    BoxLayout:
        Label:
            text: 'Last Name'
        TextInput:
            id: last_name
            multiline: False

    BoxLayout:
        Label:
            text: 'Mobile Number'
        TextInput:
            id: mobile_number
            multiline: False

    BoxLayout:
        Button:
            id: submit
            text: "Submit"
            on_release: root.submit()
            disabled: True

        Button:
            id: cancel
            text: "Cancel"