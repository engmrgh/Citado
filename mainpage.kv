<MainLayout>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Label:
            orientation: 'vertical'
            id: title
            text: 'Citado'
            font_size: 150

        Label:
            orientation: 'vertical'
            id: mode
            text: 'Choose Your Use Mode'
            font_size: 30

    GridLayout:
        rows: 3
        cols: 2
        padding: 10
        spacing: 10

        Button:
            id: manage_db
            text: 'Manage DB'
            on_press: print("Pressed")

        Button:
            id: order_food
            text: 'Order Food'
            on_release: root.order_food_button()

        Button:
            id: view_reports
            text: 'View Reports'

        Button:
            id: order_raw_material
            text: 'Order Raw Material'
            on_release: root.order_raw_material_button()

        GridLayout:
            rows: 2
            cols: 3
            padding: 2
            spacing: 2

            Button:
                id: insert_to_customer
                text: 'Add customer'
                on_release: root.insert_customer_button()

            Button:
                id: insert_to_bike
                text: 'Add Biker'

            Button:
                id: insert_to_store
                text: 'Add store'

            Button:
                id: insert_to_address
                text: 'Add address'

            Button:
                id: insert_to_food
                text: 'Add food'

            Button:
                id: insert_to_sth
                text: 'Add sth'

        GridLayout:
            rows: 2
            cols: 3
            padding: 2
            spacing: 2

            Button:
                id: delete_customer
                text: 'Delete customer'

            Button:
                id: delete_bike
                text: 'Delete Biker'

            Button:
                id: delete_store
                text: 'Delete store'

            Button:
                id: delete_address
                text: 'Delete address'

            Button:
                id: delete_food
                text: 'Delete food'

            Button:
                id: delete_sth
                text: 'Delete sth'


<FoodOrderPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            id: customer
            text: 'Customer'
        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
        Label:
            id: address
            text: 'Address'

        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
        Label:
            id: bike_delivery
            text: 'Bike delivery'

        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
        Button:
            id: food_order_submit
            text: "Submit"

        Button:
            id: food_order_cancel
            text: "Cancel"


<RawMaterialOrderPopUp>:
    orientation: 'vertical'
    BoxLayout:
        Label:
            id: store
            text: 'Store'
        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
        Label:
            id: material
            text: 'Material'

        Spinner:
            text: 'Home'
            values: 'Home', 'Work', 'Other', 'Custom'

    BoxLayout:
        Label:
            id: price
            text: 'Price'

        Label:
            id: price_val
            text: "temporal"

    BoxLayout:
        Button:
            id: raw_material_order_submit
            text: "Submit"

        Button:
            id: raw_material_order_cancel
            text: "Cancel"