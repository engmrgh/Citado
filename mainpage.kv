<MainLayout>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Label:
            orientation: 'vertical'
            id: title
            text: 'Citado'
            font_size: 150

        Label:
            orientation: 'vertical'
            id: mode
            text: 'Choose Your Use Mode'
            font_size: 30

    GridLayout:
        rows: 4
        cols: 2
        padding: 10
        spacing: 10

        Button:
            id: manage_db
            text: 'Manage DB'
            on_press: print("Pressed")

        Button:
            id: order_food
            text: 'Order Food'
            on_release: root.order_food_button()

        Button:
            id: view_reports
            text: 'View Reports'

        Button:
            text: 'Order Ingredient'
            on_release: root.order_ingredient_button()

        GridLayout:
            rows: 3
            cols: 3
            padding: 2
            spacing: 2

            Button:
                id: insert_to_customer
                text: 'Add customer'
                on_release: root.insert_customer_button()

            Button:
                id: insert_to_bike
                text: 'Add Biker'
                on_release: root.insert_biker_button()

            Button:
                id: insert_to_store
                text: 'Add store'
                on_release: root.insert_store_button()

            Button:
                id: insert_to_address
                text: 'Add address'
                on_release: root.insert_address_button()

            Button:
                id: insert_to_food
                text: 'Add food'
                on_release: root.insert_food_button()

            Button:
                text: 'Add ingredient'
                on_release: root.insert_ingredient_button()

        GridLayout:
            rows: 2
            cols: 3
            padding: 2
            spacing: 2

            Button:
                id: delete_customer
                text: 'Delete customer'
                on_release: root.delete_customer_button()

            Button:
                id: delete_bike
                text: 'Delete Biker'
                on_release: root.delete_biker_button()

            Button:
                id: delete_store
                text: 'Delete store'

            Button:
                id: delete_address
                text: 'Delete address'
                on_release: root.delete_address_button()

            Button:
                id: delete_food
                text: 'Delete food'
                on_release: root.delete_food_button()

            Button:
                id: delete_sth
                text: 'Delete sth'

        GridLayout:
            rows: 1
            cols: 3
            padding: 2
            spacing: 2

            Button:
                id: update_customer
                text: 'Update customer'
                on_release: root.update_customer_button()

            Button:
                id: update_bike
                text: 'Update Biker'
                on_release: root.update_biker_button()

            Button:
                id: update_store
                text: 'Update store'

        GridLayout:
            rows: 1
            cols: 3
            padding: 2
            spacing: 2

            Button:
                id: update_address
                text: 'Update address'
                on_release: root.update_address_button()

            Button:
                id: update_food
                text: 'Update food'

            Button:
                id: update_sth
                text: 'Update sth'
